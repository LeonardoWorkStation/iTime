<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">
			jdbc:postgresql://localhost:5410/iTime
		</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">postgres</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<mapping class="br.edu.unisep.vo.AlunosCursosVO"/>
		<mapping class="br.edu.unisep.vo.AlunoVO"/>
		<mapping class="br.edu.unisep.vo.AvaliacaoVO"/>
		<mapping class="br.edu.unisep.vo.CoordenadorVO"/>
		<mapping class="br.edu.unisep.vo.CursoVO"/>
		<mapping class="br.edu.unisep.vo.PapelUsuarioVO"/>
		<mapping class="br.edu.unisep.vo.PapelVO"/>
		<mapping class="br.edu.unisep.vo.RequisicaoVO"/>
		<mapping class="br.edu.unisep.vo.TipoHoraVO"/>
		<mapping class="br.edu.unisep.vo.UsuarioVO"/>
		
		
		
		
		
	</session-factory>
</hibernate-configuration>
